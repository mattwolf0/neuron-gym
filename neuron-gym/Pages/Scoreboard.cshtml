@page
@model neuron_gym.Pages.ScoreboardModel
@{
    ViewData["Title"] = "Scoreboard";
}

<h1>Scoreboard</h1>

<p>
    Scores saved at the end of the games are listed below.
    Use the filter to see results for a specific game.
</p>

<div class="border rounded p-3 mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0">Top scores</h2>

        <form method="get" class="d-flex align-items-center">
            <label class="me-2">Game:</label>
            <select name="SelectedGame" class="form-select form-select-sm" onchange="this.form.submit()">
                @foreach (var option in Model.GameOptions)
                {
                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                }
            </select>
        </form>
    </div>

    @if (Model.Scores.Count == 0)
    {
        <p class="text-muted mb-0">No scores have been saved yet for the selected game.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Player</th>
                        <th>Game</th>
                        <th class="text-end">Score</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Scores)
                    {
                        <tr>
                            <td>@s.PlayerName</td>
                            <td>@s.Game</td>
                            <td class="text-end">@s.Value</td>
                            <td>@s.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
